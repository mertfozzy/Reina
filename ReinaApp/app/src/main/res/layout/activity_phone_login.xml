<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_number_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:hint="Please enter your Phone Number"
        android:inputType="phone"
        android:drawableStart="@drawable/phone_icon"
        android:textAlignment="center"
        >

    </EditText>

    <Button
        android:id="@+id/send_auth_code"
        app:backgroundTint="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number_input"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/buttons"
        android:text="Send an Authentication Code"
        android:textColor="@color/white">

    </Button>

    <EditText
        android:id="@+id/authenticate_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/ic_authenticate"
        android:hint="Authentication Code"
        android:padding="10dp"
        android:visibility="invisible"
        android:inputType="phone"
        android:textAlignment="center">

    </EditText>


    <Button
        android:id="@+id/authenticate_the_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/authenticate_code_input"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/buttons"
        android:text="Give Access"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimaryDark"
        android:visibility="invisible"
        >

    </Button>

</RelativeLayout>