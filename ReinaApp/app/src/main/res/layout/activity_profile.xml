<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture_visit"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/profileimage"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="3dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_visit"
        android:layout_below="@+id/profile_picture_visit"
        android:textAlignment="center"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="60dp"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:text="Username"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/about_visit"
        android:layout_below="@+id/username_visit"
        android:textAlignment="center"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:text="About"
        />

    <Button
        android:id="@+id/message_sent_request"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/about_visit"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="15dp"
        android:text="Send a Chat Request"
        android:textAlignment="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimaryDark"
        />

    <Button
        android:id="@+id/message_request_evaluation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/message_sent_request"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:text="Cancel Chat Request"
        android:visibility="invisible"
        android:textAlignment="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimaryDark"
        />

</RelativeLayout>