<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <include
        android:id="@+id/settings_toolbar"
        layout="@layout/app_bar_layout" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@+id/settings_toolbar"
        android:id="@+id/profile_picture_setting"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/profileimage"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="3dp" />

    <EditText
        android:id="@+id/username_setting"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/profile_picture_setting"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/ic_person_icon"
        android:padding="15dp"
        android:hint="Username"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profile_about"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/username_setting"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/ic_editname"
        android:padding="15dp"
        android:hint="I'm using Reina!"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/update_setting_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/profile_about"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="15dp"
        android:text="Apply Changes"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimaryDark"
        />




</RelativeLayout>